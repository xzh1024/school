{
  // pages.json显示颜色块
  "color-highlight.enable": true,
  "color-highlight.markerType": "dot-before",
  "color-highlight.languages": ["jsonc"],
  "color-highlight.markRuler": false,
  "color-highlight.matchWords": false,

  "uniapp-vscode.jsAutoApi": false,
  "uniapp-vscode.jsAutoCompletion": false,
  "uniapp-vscode.jsHover": false,
  // 路径提示
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src/",
    "/": "${workspaceRoot}/src/",
    "static": "${workspaceRoot}/src/static"
  },

  "files.associations": {
    "pages.json": "jsonc",
    "mainifest.json": "jsonc",
    "*.nvue": "vue"
  },
  "better-comments.tags": [
    {
      "tag": "#",
      "color": "#18b566",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    }
  ],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "eslint.format.enable": true,
  "vscode.typescript-language-features": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.words": ["discount", "recharge"]
}
